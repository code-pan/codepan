colors = OrangeRed SeaGreen Tomato DarkOliveGreen Crimson
images = 'made-in.jpg' 'OwfYyiJXQ6qddLgTOBGX_Ariana Prestes photos (4).jpg' 'in-out.jpg' 'level.jpg' 'EpBHfTrtRLa2PCPwuXkQ_thessaloniki_port.jpg'
positions_top = '' 90px 10px 100px 200px
positions_left = '' 190px 10px 100px 20px

*
  font-family Droid Sans

body
  background-color DarkSlateGray
  padding 0
  margin 0

h1, h2, h3
  font-family Cousine
  display inline-block

div.container
  margin-left auto
  margin-right auto
  width 80%
  max-width 670px

h1
  font-size 3.2em
  padding 6px 20px
  color colors[0]
  box-shadow 10px 10px 0 colors[0]
  background-color White
  border-radius 6px

header
  background-image url(images[0])
  background-repeat no-repeat
  background-position center center
  background-size 100%
  height 450px
  border-bottom 10px solid colors[0]

.section h2
  font-size 3em
  padding 4px 18px
  box-shadow 10px 10px 0
  background-color White
  border-radius 6px
  position: relative

.section
  height 350px
  background-repeat no-repeat
  background-position center center
  background-size 100%
  border-style solid
  border-width 10px 0 10px 0

.content
  padding-top 50px
  padding-bottom 140px

for num in (1..4)
  div.section_{num}
    background-image: url(images[num])
    border-color: colors[num]
  h2#section_{num}
    color: colors[num]
    box-shadow: 10px 10px 0 colors[num]
    top: positions_top[num]
    left: positions_left[num]
